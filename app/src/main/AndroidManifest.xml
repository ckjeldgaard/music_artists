<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trifork.ckp.musicartists">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MusicArtistsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".searchartist.SearchArtistActivity" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewartist.ViewArtistActivity"
            android:theme="@style/AppThemeNoActionBar"
            />
    </application>

</manifest>